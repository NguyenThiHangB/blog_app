<div id="comment-form">
  <h3><%= t ".comments" %> (<%= @entry.comments.count%>)</h3>
  <% @comments.each do |comment| %>
      <li>
        <%= link_to gravatar_for(comment.user, size: Settings.comment.avatar.size), comment.user%>
        <span>
          <span class="user"><%= link_to comment.user.name, comment.user %></span>
          <span class="timestamp">
            <%= time_ago_in_words(comment.created_at)%> <%= t".ago" %>
          </span>
          <span>

          </span>
        </span>
        <span class="content"><p><%= comment.content %>
        <hr/>
      </li>
  <% end %>
  <%= render "comments/form", comment: @comment %>
</div>
